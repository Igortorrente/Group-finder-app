<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingBottom="60dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                tools:srcCompat="@tools:sample/avatars[3]"
                android:id="@+id/groupImageView" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_width="80dp" android:layout_height="0dp"
                android:adjustViewBounds="true" android:cropToPadding="false"/>
        <TextView
                android:text="@string/default_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/groupMainSubjectTextView" android:textSize="24sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/timeToBeginTextView" android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/groupImageView"
                android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.169"
                app:layout_constraintVertical_bias="0.538"/>
        <TextView
                android:text="@string/default_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timeToBeginTextView"
                android:textSize="18sp" android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/groupMainSubjectTextView"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Ui.NewGroupActivity">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/baseline_save_white_24dp"
            android:id="@+id/addGroupFAB"
            android:focusable="true" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:layout_width="96dp"
                    android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/userProfileImageView"
                    app:srcCompat="@drawable/gde"
                    android:gravity="center"
                    android:adjustViewBounds="true" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="32dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                    android:text="@string/text_main_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/subjectTextView"
                    android:gravity="center"
                    android:layout_marginBottom="11dp"
                    app:layout_constraintBottom_toTopOf="@+id/subjectFieldTextView"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/subjectFieldTextView"/>
            <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:ems="10"
                    android:id="@+id/subjectFieldTextView"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:hint="@string/hint_main_subject"
                    android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/userProfileImageView"
                    android:layout_marginStart="16dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:minHeight="138dp">

            <TextView
                    android:layout_width="150dp"
                    android:layout_height="34dp"
                    android:ems="10"
                    android:id="@+id/endDayTextView"
                    android:gravity="center"
                    android:hint="@string/hint_begin_day"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:textSize="18sp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/dateEndTextView"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="34dp"
                    android:ems="20"
                    android:id="@+id/endTimeTextView"
                    android:gravity="center"
                    android:hint="@string/hint_begin_hour"
                    android:textSize="18sp"
                    android:lineSpacingExtra="8sp"
                    app:layout_constraintStart_toEndOf="@+id/endDayTextView"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/dateEndTextView"
                    android:layout_marginStart="8dp" android:textAlignment="viewStart"/>
            <TextView
                    android:text="@string/text_location"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:id="@+id/locationTextView"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:textAlignment="viewStart"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textAutoComplete"
                    android:ems="10"
                    android:id="@+id/locationFieldTextView"
                    android:hint="@string/hint_location"
                    app:layout_constraintTop_toBottomOf="@+id/locationTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:text="@string/text_begin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateInitTextView"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/locationFieldTextView" android:textAlignment="viewStart"
                    android:textStyle="bold"/>
            <TextView
                    android:layout_width="100dp"
                    android:layout_height="34dp"
                    android:ems="20"
                    android:id="@+id/initTimeTextView"
                    android:hint="@string/hint_begin_hour"
                    android:layout_marginStart="8dp" android:textSize="18sp"
                    app:layout_constraintStart_toEndOf="@+id/initDayTextView"
                    android:lineSpacingExtra="8sp"
                    app:layout_constraintTop_toBottomOf="@+id/dateInitTextView" android:layout_marginTop="8dp"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:layout_width="150dp"
                    android:layout_height="34dp"
                    android:ems="10"
                    android:id="@+id/initDayTextView"
                    android:hint="@string/hint_begin_day"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/dateInitTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:textSize="18sp"
                    android:textAlignment="viewStart"/>
            <TextView
                    android:text="@string/text_ends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/dateEndTextView"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/initTimeTextView"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptionTextView"
                    android:text="@string/text_descrition"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/endTimeTextView"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/descriptionFieldTextView"
                    android:hint="@string/hint_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/descriptionTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
                    android:inputType="text" android:textAlignment="textStart"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>